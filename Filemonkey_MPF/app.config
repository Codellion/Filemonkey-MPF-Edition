<?xml version="1.0"?>
<configuration>
  <configSections>
    <sectionGroup name="memento">
      <section name="persistenceEntities" type="System.Configuration.NameValueSectionHandler"/>
      <section name="providerConfig" type="System.Configuration.NameValueSectionHandler"/>
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <connectionStrings>
      <add name="MEMENTO" connectionString="Provider=Microsoft.SQLSERVER.CE.OLEDB.3.5;Data Source=.\DataContext.sdf;"/>
  </connectionStrings>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">        
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="&lt;p&gt;&lt;b&gt;%date{dd/MM/yyyy HH:mm:ss} -&gt; &lt;/b&gt;%message&lt;/p&gt;"/>
      </layout>
    </appender>
    <root>
      <level value="INFO"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
  </log4net>
  <memento>
    <persistenceEntities>
      <add key="FileMonkey.Pandora.dal.entities.RuleFile" value="RuleFile"/>
    </persistenceEntities>
    <providerConfig>      
      <!-- OLE DB -->
      <add key="persistenceProvider" value="Memento.DataAccess.OleDb.BdPersistence`1"/>
      <add key="assemblyPersistenceProvider" value="Memento.DataAccess.OleDb.dll"/>      
      <!-- The query for to return the primarykey generated by database / Sentencia para recuperar el identificador generador por la BBDD -->
      <!-- Example for SQL Server -->
      <add key="databaseKeyCommand" value="SELECT  @@IDENTITY AS ID; "/>      
    </providerConfig>
  </memento>
  <appSettings>    
  </appSettings>
  
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0,Profile=Client"/></startup></configuration>
